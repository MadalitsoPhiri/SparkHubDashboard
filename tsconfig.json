{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/assets/*": ["./assets/*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/screens/*": ["./pages/*"],
      "@/routes/*": ["./routes/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/state/*": ["./state/*"],
      "@/utils/*": ["./utils/*"],
      "@/layout/*": ["./layout/*"],
      "@/config/*": ["./config/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/services/*": ["./services/*"],
      "@/constants/*": ["./constants/*"],
      "@/styles?*": ["./styles/*"],
      "@/types/*": ["./types/*"],
      "@/libs/*": ["./libs/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
